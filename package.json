{
  "name": "vitexpress",
  "private": true,
  "workspaces": [
    "apps/server/*",
    "apps/client/*",
    "packages/common/*",
    "packages/server/*",
    "packages/client/*",
    "packages/tsconfig/*"
  ],
  "scripts": {
    "dashboard:dev": "yarn workspace @monyfox/dashboard dev",
    "dashboard:build": "yarn workspaces foreach -Rt --from @monyfox/dashboard run build",
    "dashboard:build-with-deps": "yarn workspaces foreach -R --from @monyfox/common-data,@monyfox/common-symbol,@monyfox/common-symbol-exchange run build && yarn workspace @monyfox/dashboard build",
    "build": "yarn workspaces foreach -At run build",
    "lint": "yarn workspaces foreach -A run lint",
    "test": "yarn workspaces foreach -A run test",
    "coverage": "npx vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "packageManager": "yarn@4.9.1",
  "dependencies": {
    "date-fns": "^4.1.0"
  }
}
